{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}
{% block body %}
    <div class="bg-gray-50 py-10">
        <div class="container mx-auto max-w-4xl px-4">
            <h1 class="text-4xl font-extrabold text-center text-gray-800 mb-8">
                Gestion des Produits et Catégories
            </h1>
            <p class="text-lg text-gray-600 text-center mb-10">
                Bienvenue sur votre tableau de bord. Gérez vos produits et catégories en toute simplicité.
            </p>
            <div class="flex justify-center space-x-6">
                <a href="{{ path('produits.index') }}"
                   class="bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                    Afficher mes Produits
                </a>
                <a href="{{ path('categories.index') }}"
                   class="bg-green-600 hover:bg-green-700 text-white text-lg font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                    Afficher mes Catégories
                </a>
            </div>
        </div>
    </div>
{% endblock %}
